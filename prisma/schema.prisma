generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  preferredCurrency String   @default("USD")
  conversionRate    Float    @default(1500)
  onboarded     Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  accounts      Account[]
  sessions      Session[]
  budgets       Budget[]
  incomes       Income[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  name      String
  percent   Float
  order     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Income {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())

  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  allocations IncomeAllocation[]

  @@index([userId])
}

model IncomeAllocation {
  id          String   @id @default(cuid())
  incomeId    String
  name        String
  percent     Float
  amount      Float
  description String?

  income Income @relation(fields: [incomeId], references: [id], onDelete: Cascade)

  @@index([incomeId])
}
